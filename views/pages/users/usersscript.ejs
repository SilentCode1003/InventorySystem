<script>
  $(document).ready(function () {
    let usercode = "";
    let status = "";

    const loader = `  
        <tr>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
        </tr>`;

    const tbody = $('#datatable tbody');
    for(let i = 0; i < 11; i++){
      tbody.append(loader);
    }

    LoadTable();
    LoadList();
    LoadListModal();

    $("#datatable tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      usercode = dataRow[0];
      status = dataRow[9];
    });

    $(document).on("click", "#addBtn", function () {
      let fullname = $("#fullname").val();
      let username = $("#username").val();
      let password = $("#password").val();
      let roletype = $("#roletype").val();
      let accesstype = $("#accesstype").val();
      let department = $("#department").val();
      let position = $("#position").val();

      var message = "";

      if (fullname == "") {
        message += "FULLNAME ";
      }
      if (username == "") {
        message += "USERNAME ";
      }
      if (password == "") {
        message += "PASSWORD ";
      }
      if (roletype == "") {
        message += "ROLE TYPE ";
      }
      if (accesstype == "") {
        message += "ACCESS TYPE ";
      }
      if (department == "") {
        message += "DEPARTMENT ";
      }
      if (position == "") {
        message += "POSITION ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/users/save",
          data: {
            fullname: fullname,
            username: username,
            password: password,
            roletype: roletype,
            accesstype: accesstype,
            position: position,
            department: department,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${fullname} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    $(document).on("click", "#saveBtn", function () {
      let fullname = $("#fullnamemodal").val();
      let username = $("#usernamemodal").val();
      let password = $("#passwordmodal").val();
      let roletype = $("#rolelistmodal").val();
      let accesstype = $("#positionlistmodal").val();

      var message = "";

      if (fullname == "") {
        message += "FULLNAME ";
      }
      if (username == "") {
        message += "USERNAME ";
      }
      if (password == "") {
        message += "PASSWORD ";
      }
      if (roletype == "") {
        message += "ROLE ";
      }
      if (accesstype == "") {
        message += "POSITION ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/users/edit",
          data: {
            fullname: fullname,
            username: username,
            password: password,
            roletype: roletype,
            accesstype: accesstype,
            usercode: usercode,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${fullname} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Edit get Row Details
    $(document).on("click", "#editBtn", function () {
      $("#usercodemodal").val(usercode);
      $("#userModal").modal("show");
      console.log(usercode);
    });

    //Status Update
    $(document).on("click", "#activeBtn", function () {
      console.log(usercode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/users/status",
        data: {
          status: status,
          usercode: usercode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${usercode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $(document).on("click", "#inactiveBtn", function () {
      console.log(usercode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/users/status",
        data: {
          status: status,
          usercode: usercode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${usercode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    //Load Lists
    function LoadList() {
      $.ajax({
        type: "GET",
        url: "/roletype/load",
        success: function (result) {
          var data = result.data;
          let activeRole = [];

          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              activeRole.push(item.roletypename);
            }
          });

          populateDropdown(activeRole, "roletypeDropdown", "roletype" );
        },
        error: function (err) {
          errormsg(err);
        },
      });

      $.ajax({
        type: "GET",
        url: "/position/load",
        success: function (result) {
          var data = result.data;
          let activePosition = [];
          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              activePosition.push(item.positionname);
            }
          });

          populateDropdown(activePosition, "positionDropdown", "position" );
        },
        error: function (err) {
          errormsg(err);
        },
      });

      $.ajax({
        type: "GET",
        url: "/accesstype/load",
        success: function (result) {
          var data = result.data;
          let activeAccesstype = [];
          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              activeAccesstype.push(item.accesstypename);
            }
          });
          populateDropdown(activeAccesstype, "accesstypeDropdown", "accesstype" );
        },
        error: function (err) {
          errormsg(err);
        },
      });

      $.ajax({
        type: "GET",
        url: "/department/load",
        success: function (result) {
          var data = result.data;
          let activeDepartment = [];
          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              // var options = new Option(item.departmentname, item.departmentname);
              // $(options).html(item.departmentname);
              // $("#departmentlist").append(options);
              activeDepartment.push(item.departmentname);
            }
          });
          populateDropdown(activeDepartment, "departmentDropdown", "department" );
        },
        error: function (err) {
          errormsg(err);
        },
      });
    }

    function LoadListModal() {
      $.ajax({
        type: "GET",
        url: "/roletype/load",
        success: function (result) {
          var data = result.data;
          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              var options = new Option(item.rolename, item.rolename);
              $(options).html(item.rolename);
              $("#rolelistmodal").append(options);
            }
          });
        },
        error: function (err) {
          errormsg(err);
        },
      });

      $.ajax({
        type: "GET",
        url: "/position/load",
        success: function (result) {
          var data = result.data;
          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              var options = new Option(item.positionname, item.positionname);
              $(options).html(item.positionname);
              $("#positionlistmodal").append(options);
            }
          });
        },
        error: function (err) {
          errormsg(err);
        },
      });
    }

    //Search Table Functionality
    $("#search").on("input", function () {
      filterTableRows("#datatable", 11 , "#search");
    });

    function LoadTable() {
      $(".progress").hide();
      $(".progress").slideDown();

      $.ajax({
        url: '/users/load',
        method: 'GET',
        dataType: 'json',
        xhrFields: {
          onprogress: function (e) {
            if (e.lengthComputable) {
              var percentComplete = (e.loaded / e.total) * 100;
              $(".progress-bar").css("width", percentComplete + "%");
            }
          }
        },
        success: function (data) {
          setTimeout(function () {
            $(".progress").slideUp(function () {
              if (data.msg === 'success') {
                populatedatatable(data.data);
              } else {
                console.error(data.msg);
              }
            });
          }, 1000);
        },
        error: function (error) {
          console.error(error);
        }
      });
    }

    function populatedatatable(data) {
      console.log(data);
      const tableBody = $('#datatable tbody');
      tableBody.empty();

      if (data.length === 0) {
        const tr = $('<tr>').append($('<td>', {
          colspan: 11,
          class: 'text-center',
          text: 'No Data Matched'
        }));
        tableBody.append(tr);
      } else {
        data.forEach(item => {
          let action = '';
          if (item.status === 'ACTIVE') {
            action = `
                  <span class="editbutton" id="editBtn" name="editBtn" data-toggle="modal" data-target="#editModal"><i class="fas fa-edit" style="color: rgb(99, 115, 129);"></i></span>
                  <span class="editbutton" id="inactiveBtn"><i class="fas fa-eye-slash" style="color: rgb(99, 115, 129);"></i></span>`;
          } else if (item.status === 'INACTIVE') {
            action = `
                <span class="editbutton" id="editBtn" name="editBtn" data-toggle="modal" data-target="#editModal"><i class="fas fa-edit" style="color: rgb(99, 115, 129);"></i></span>
                <span class="editbutton" id="activeBtn"><i class="fas fa-eye" style="color: rgb(99, 115, 129);"></i></span>`;
          }
          const statusBackground = item.status === 'ACTIVE' ? 'status-success' : 'status-warning';
          const containerBackground = item.status === 'ACTIVE' ? 'status-container-sc' : 'status-container-wr';

          const tr = $('<tr>').append(
            $('<td>', { text: item.usercode, 'data-label': 'ID', class: 'custom-mobile-align' }),
            $('<td>', { text: item.fullname, 'data-label': 'Full Name', class: 'custom-mobile-align no-wrap' }),
            $('<td>', { text: item.username, 'data-label': 'Username', class: 'custom-mobile-align' }),
            $('<td>', { text: item.roletype, 'data-label': 'Role', class: 'custom-mobile-align' }),
            $('<td>', { text: item.position, 'data-label': 'Position', class: 'custom-mobile-align' }),
            $('<td>', { text: item.accesstype, 'data-label': 'Access', class: 'custom-mobile-align' }),
            $('<td>', { text: item.department, 'data-label': 'Department', class: 'custom-mobile-align' }),
            $('<td>', { text: item.createdby, 'data-label': 'Created By', class: 'custom-mobile-align no-wrap' }),
            $('<td>', { text: item.createddate, 'data-label': 'Created Date', class: 'custom-mobile-align no-wrap' }),
            $('<td>', { class: 'custom-mobile-align', 'data-label': 'Status' }).append(
              $('<div>', { class: containerBackground }).append(
                $('<span>', { text: item.status, class: statusBackground })
              )
            ),
            $('<td>', { html: action, 'data-label': 'Action', class: 'actionWidth' })
          );

          tableBody.append(tr);
        });
      }
    }

    setupCustomDropdown("roletype", "roletypeDropdown", "dropdown-option");
    setupCustomDropdown("position", "positionDropdown", "dropdown-option");
    setupCustomDropdown("department", "departmentDropdown", "dropdown-option");
    setupCustomDropdown("accesstype", "accesstypeDropdown", "dropdown-option");
  });
</script>
