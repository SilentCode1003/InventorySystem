<!-- Begin PCreated by Content -->
<div class="container-fluid">
  <!-- PCreated by Heading -->
  <div class="d-sm-flex align-items-center justify-content-between mb-3">
    <h1 class="page-title">Vendors Info</h1>
  </div>
  <!-- Content Row -->
  <div class="row mb-2">
    <div class="col-lg-12">
      <div class="card">
        <div class="card-body">
          <div class="row mb-2">
            <div class="col-md-6">
              <label class="form-label" for="vendorname">Vendor Name</label>
              <input
                id="vendorname"
                name="vendorname"
                type="text"
                class="form-control"
                placeholder="Enter Vendor Name"
                aria-label="vendorname"
                aria-describedby="basic-addon1"
              />
            </div>

            <div class="col-md-6">
              <label class="form-label" for="contactname">Contact Name</label>
              <input
                id="contactname"
                name="contactname"
                type="text"
                class="form-control"
                placeholder="Enter Contact Name"
                aria-label="contactname"
                aria-describedby="basic-addon1"
              />
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-md-6">
              <label class="form-label" for="email">Email</label>
              <input
                id="email"
                name="email"
                type="text"
                class="form-control"
                placeholder="Enter Email"
                aria-label="email"
                aria-describedby="basic-addon1"
              />
            </div>

            <div class="col-md-6">
              <label class="form-label" for="phone">Phone</label>
              <input
                id="phone"
                name="phone"
                type="text"
                class="form-control"
                placeholder="Enter Phone"
                aria-label="phone"
                aria-describedby="basic-addon1"
              />
            </div>
          </div>

          <div class="row mb-2">
            <div class="col-md-12">
              <label class="form-label" for="address">Address</label>
              <textarea class="form-control"
                id="address"
                name="address"
                rows="4"
                cols="50"
              ></textarea>
            </div>
          </div>

          <div class="row">
            <div class="col-md-4 text-center mt-1">
              <button
                id="addBtn"
                name="addBtn"
                class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm w-75"
              >
                <i class="fa fa-plus" aria-hidden="true"></i>
                Add
              </button>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- DataTales Example -->
  <div class="card shadow mb-4">
    <div class="card-header py-3">
      <div class="row mb-4">
        <div class="col-md-3">
          <h6 class="m-0 font-weight-bold table-title">DataTables Example</h6>
        </div>
        <div class="col-md-6">
          <input
            id="search"
            name="search"
            type="text"
            class="form-control"
            placeholder="Search Vendor Name"
            aria-label="search"
            aria-describedby="basic-addon1"
          />
        </div>
        <div class="card-body">
          <div class="table-responsive-sm">
            <table
              class="table table-bordered table-sm"
              id="users-table"
              width="100%"
              cellspacing="10"
            >
              <thead>
                <tr>
                  <th class="col-1 text-start">ID</th>
                  <th class="col-2 text-center">Name</th>
                  <th class="col-2 text-center">Contact Name</th>
                  <th class="col-2 text-center">Email</th>
                  <th class="col-1 text-center">Phone</th>
                  <th class="col-3 text-center">Address</th>
                  <th class="col-1 text-center">status</th>
                  <th class="col-1 text-end">Actions</th>
                </tr>
              </thead>
              <tbody></tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
