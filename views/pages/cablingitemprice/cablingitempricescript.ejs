<script>
  $(document).ready(function () {
    let itemcode = "";
    let status = "";
    let itemdescription = "";
    let itemprice = "";

    const loader = `  
        <tr>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
          <td><div class="custom-loader"></div></td>
        </tr>`;

    const tbody = $('#datatable tbody');
    for(let i = 0; i < 7; i++){
      tbody.append(loader);
    }


    LoadTable();
    LoadList();
    // LoadModalList();

    $("#datatable tbody").on("click", "tr", function () {
      var dataRow = [];
      $(this)
        .closest("tr")
        .find("td")
        .each(function () {
          dataRow.push($(this).text());
        });
      console.log(dataRow);
      itemcode = dataRow[0];
      itemdescription = dataRow[1];
      itemprice = dataRow[3];
      status = dataRow[6];
    });

    $(document).on("click", "#editBtn", function () {
      $("#itempricemodal").val(RemoveCurrencyFormatting(itemprice));
      $("#itemcodemodal").val(itemcode);
      $("#cablingitempriceModal").modal("show");
      console.log(itemcode);
    });

    $(document).on("click", "#addBtn", function () {
      let price = $("#itemprice").val();
      let brandname = $("#brandname").val();
      let description = $("#itemname").val();
      let barcode = $("#barcode").val();

      var message = "";

      if (price == "") {
        message += "Item Price ";
      }

      if (brandname == "") {
        message += "Item Brand";
      }

      if (description == "") {
        message += "Item Description";
      }

      if (barcode == "") {
        message += "Item Barcode";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/cablingitemprice/save",
          data: {
            itemprice: price,
            description: description,
            barcode: barcode,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${description} has already registered!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Edit Update
    $(document).on("click", "#saveBtn", function () {
      let itempricemodal = $("#itempricemodal").val();
      let itempricecode = $("#itemcodemodal").val();

      var message = "";

      if (itempricemodal == "") {
        message += "Item Price ";
      }

      if (message != "") {
        warning("Required", `Please fill up ${message}`);
      } else {
        $.ajax({
          type: "POST",
          url: "/cablingitemprice/edit",
          data: {
            itempricemodal: itempricemodal,
            itempricecode: itempricecode,
          },
          success: function (result) {
            if (result.msg == "success") {
              LoadTable();
              success("Saved", "Successfully");
            }

            if (result.msg == "exist") {
              warning("Exist", `${itemdescriptionmodal} already exist!`);
            }
          },
          error: function (err) {
            errormsg(err);
          },
        });
      }
    });

    //Status Update
    $(document).on("click", "#activeBtn", function () {
      console.log(itemcode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/cablingitemprice/status",
        data: {
          status: status,
          itemcode: itemcode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${itemcode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $(document).on("click", "#inactiveBtn", function () {
      console.log(itemcode);
      console.log(status);
      $.ajax({
        type: "POST",
        url: "/cablingitemprice/status",
        data: {
          status: status,
          itemcode: itemcode,
        },
        success: function (result) {
          if (result.msg == "success") {
            LoadTable();
            success("Saved", "Successfully");
          }

          if (result.msg == "notexist") {
            warning(`${itemcode} does not exist!`);
          }
        },
        error: function (err) {
          errormsg(err);
        },
      });
    });

    $("#search").on("keyup", function () {
      var input, filter, table, tr, td, i, txtValue;
      input = document.getElementById("search");
      filter = input.value.toUpperCase();
      table = document.getElementById("cablingitemprice-dataTable");
      tr = table.getElementsByTagName("tr");
      for (i = 0; i < tr.length; i++) {
        td = tr[i].getElementsByTagName("td")[2];
        if (td) {
          txtValue = td.textContent || td.innerText;
          if (txtValue.toUpperCase().indexOf(filter) > -1) {
            tr[i].style.display = "";
          } else {
            tr[i].style.display = "none";
          }
        }
      }
    });

    $(document).on("click", "#itemname", function () {
      var brand = $("#brandname").val();

      console.log(brand);
      $("#itemDropdown").empty();
      $.ajax({
        type: "POST",
        url: "/cablingitems/getitem",
        data: {
          brand: brand,
        },
        success: function (result) {
          var data = result.data;
          let activeItem = [];
          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              activeItem.push(item.description);
              var options = new Option(item.description, item.description);
              $(options).html(item.description);
              // $("#descriptionlist").append(options);
            }
          });

          populateItem(activeItem);
        },
        error: function (error) {
          errormsg(error);
        },
      });
    });
    
    $("#search").on("input", function () {
      filterTableRows("#datatable", 6 , "#search");
    });

    function LoadTable() {
      $(".progress").hide();
      $(".progress").slideDown();

      $.ajax({
        url: '/cablingitemprice/load',
        method: 'GET',
        dataType: 'json',
        xhrFields: {
          onprogress: function (e) {
            if (e.lengthComputable) {
              var percentComplete = (e.loaded / e.total) * 100;
              $(".progress-bar").css("width", percentComplete + "%");
            }
          }
        },
        success: function (data) {
          setTimeout(function () {
            $(".progress").slideUp(function () {
              if (data.msg === 'success') {
                populatedatatable(data.data);
              } else {
                console.error(data.msg);
              }
            });
          }, 1000);
        },
        error: function (error) {
          console.error(error);
        }
      });
    }

    function populatedatatable(data) {
      console.log(data);
      const tableBody = $('#datatable tbody');
      tableBody.empty();

      if (data.length === 0) {
        const tr = $('<tr>').append($('<td>', {
          colspan: 6,
          class: 'text-center',
          text: 'No Data Matched'
        }));
        tableBody.append(tr);
      } else {
        data.forEach(item => {
          let action = '';
          if (item.status === 'ACTIVE') {
            action = `
                  <span class="editbutton" id="editBtn" name="editBtn" data-toggle="modal" data-target="#editModal"><i class="fas fa-edit" style="color: rgb(99, 115, 129);"></i></span>
                  <span class="editbutton" id="inactiveBtn"><i class="fas fa-eye-slash" style="color: rgb(99, 115, 129);"></i></span>`;
          } else if (item.status === 'INACTIVE') {
            action = `
                <span class="editbutton" id="editBtn" name="editBtn" data-toggle="modal" data-target="#editModal"><i class="fas fa-edit" style="color: rgb(99, 115, 129);"></i></span>
                <span class="editbutton" id="activeBtn"><i class="fas fa-eye" style="color: rgb(99, 115, 129);"></i></span>`;
          }
          const statusBackground = item.status === 'ACTIVE' ? 'status-success' : 'status-warning';
          const containerBackground = item.status === 'ACTIVE' ? 'status-container-sc' : 'status-container-wr';

          const tr = $('<tr>').append(
            $('<td>', { text: item.itempricecode, 'data-label': 'ID', class: 'custom-mobile-align' }),
            $('<td>', { text: item.itemcode, 'data-label': 'Name', class: 'custom-mobile-align' }),
            $('<td>', { text: item.barcode, 'data-label': 'Barcode', class: 'custom-mobile-align' }),
            $('<td>', { text: formatCurrency(item.price), 'data-label': 'Price', class: 'custom-mobile-align' }),
            $('<td>', { text: item.createdby, 'data-label': 'Created By', class: 'custom-mobile-align' }),
            $('<td>', { text: item.createddate, 'data-label': 'Created Date', class: 'custom-mobile-align' }),
            $('<td>', { class: 'custom-mobile-align', 'data-label': 'Status' }).append(
              $('<div>', { class: containerBackground }).append(
                $('<span>', { text: item.status, class: statusBackground })
              )
            ),
            $('<td>', { html: action, 'data-label': 'Action', class: 'actionWidth' })
          );

          tableBody.append(tr);
        });
      }
    }

    function LoadList() {
      $.ajax({
        type: "GET",
        url: "/brand/load",
        success: function (result) {
          var data = result.data;
          let activeBrand = [];

          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              activeBrand.push(item.brandname);
              var options = new Option(item.brandname, item.brandname);
              $(options).html(item.brandname);
              // $("#fruits").append(options);
              // $("#brandnamelist").append(options);
            }
          });
          populateBrand(activeBrand);
        },
        error: function (err) {
          errormsg(err);
        },
      });
    }

    function LoadModalList() {
      $.ajax({
        type: "GET",
        url: "/brand/load",
        success: function (result) {
          var data = result.data;

          $.each(data, function (key, item) {
            if (item.status == "ACTIVE") {
              var options = new Option(item.brandname, item.brandname);
              $(options).html(item.brandname);
              // $("#fruits").append(options);
              $("#brandnamelistmodal").append(options);
            }
          });
        },
        error: function (err) {
          errormsg(err);
        },
      });
    }
  
    function populateBrand(activeBrand) {
      for (const brand of activeBrand) {
        addBrand("brandDropdown", brand);
      }
    }

    function populateItem(activeItem) {
      for (const item of activeItem) {
        addItem("itemDropdown", item);
      }
    }

    function addBrand(dropdownId, optionText) {
      const dropdownElement = document.getElementById(dropdownId);
      const newOption = document.createElement("div");
      newOption.className = "dropdown-option";
      newOption.textContent = optionText;

      newOption.addEventListener("click", function () {
        const inputElement = document.getElementById("brandname");
        inputElement.value = optionText;
        dropdownElement.style.display = "none";
      });

      dropdownElement.appendChild(newOption);
    }

    function addItem(dropdownId, optionText) {
      const dropdownElement = document.getElementById(dropdownId);
      const newOption = document.createElement("div");
      newOption.className = "dropdown-option";
      newOption.textContent = optionText;

      newOption.addEventListener("click", function () {
        const inputElement = document.getElementById("itemname");
        inputElement.value = optionText;
        dropdownElement.style.display = "none";
      });

      dropdownElement.appendChild(newOption);
    }

    setupCustomDropdown("brandname", "brandDropdown", "dropdown-option");

    setupCustomDropdown("itemname", "itemDropdown", "dropdown-option");
  });
</script>
