<!-- Modal -->
<div
  class="modal fade bd-example-modal-lg"
  id="cablingrequestsubmitModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  data-keyboard="false"
  data-backdrop="static"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">
          Requester Information
        </h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="col-md-12">
                  <label class="form-label" for="requestdate"
                    >Request Date</label
                  >
                  <input
                    class="entry-input form-control mb-2"
                    id="requestdate"
                    name="requestdate"
                    type="date"
                    data-field="date"
                    readonly
                  />
                  <div id="dtbox"></div>
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="personel">Personel</label>
                  <input
                    class="entry-input form-control mb-2"
                    list="personellist"
                    id="personel"
                    name="personel"
                  />

                  <datalist id="personellist">
                    <option value=""></option>
                  </datalist>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="storelist">Store</label>
                  <input
                    class="entry-input form-control mb-2"
                    list="storenamelist"
                    id="storelist"
                    name="storelist"
                  />

                  <datalist id="storenamelist">
                    <option value=""></option>
                  </datalist>
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="typelist">Type</label>
                  <input
                    class="entry-input form-control mb-2"
                    list="typenamelist"
                    id="typelist"
                    name="typelist"
                  />

                  <datalist id="typenamelist">
                    <option value=""></option>
                  </datalist>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
          data-dismiss="modal"
        >
          <i class="fa fa-times" aria-hidden="true"></i> Close
        </button>
        <button
          type="button"
          id="saveBtn"
          class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
        >
          <i class="fa fa-check" aria-hidden="true"></i> Request
        </button>
      </div>
    </div>
  </div>
</div>

