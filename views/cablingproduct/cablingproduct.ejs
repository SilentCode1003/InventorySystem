<!-- Modal -->
<div
  class="modal fade bd-example-modal-lg"
  id="cablingitemsModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  data-keyboard="false"
  data-backdrop="static"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Cabling Items</h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="col-md-12">
                  <label class="form-label" for="itemcodemodal"
                    >Item Code</label
                  >
                  <input
                    id="itemcodemodal"
                    name="itemcodemodal"
                    type="text"
                    class="form-control"
                    placeholder="Enter new item code"
                    aria-label="fullname"
                    aria-describedby="basic-addon1"
                    disabled
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="itemdescriptionmodal"
                    >Item Description</label
                  >
                  <input
                    id="itemdescriptionmodal"
                    name="itemdescriptionmodal"
                    type="text"
                    class="form-control"
                    placeholder="Enter new item description"
                    aria-label="fullname"
                    aria-describedby="basic-addon1"
                  />
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="brandlistmodal"
                    >Brand Name</label
                  >
                  <input
                    class="entry-input form-control mb-2"
                    list="brandnamelistmodal"
                    id="brandlistmodal"
                    name="fruit"
                  />

                  <datalist id="brandnamelistmodal">
                    <option value=""></option>
                  </datalist>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
          data-dismiss="modal"
        >
          <i class="fa fa-times" aria-hidden="true"></i> Close
        </button>
        <button
          type="button"
          id="saveBtn"
          class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
        >
          <i class="fa fa-check" aria-hidden="true"></i> Save
        </button>
      </div>
    </div>
  </div>
</div>

<!-- PCreated by Heading -->
<div class="d-sm-flex align-items-center justify-content-between mb-3">
  <h1 class="page-title">Cabling Products</h1>
</div>
<!-- Content Row -->
<div class="row mb-2">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label" for="itemlist">Item Description</label>
            <input
              class="entry-input form-control mb-2"
              list="itemnamelist"
              id="itemlist"
              name="fruit"
            />

            <datalist id="itemnamelist">
              <option value=""></option>
            </datalist>
          </div>
        </div>

        <div class="row mb-2">
          <div class="col-md-6">
            <label class="form-label" for="itemserial">Item Serial</label>
            <input
              id="itemserial"
              name="itemserial"
              type="text"
              class="form-control"
              placeholder="Enter Item Serial"
              aria-label="itemserial"
              aria-describedby="basic-addon1"
            />
          </div>
        </div>

        <div class="row">
          <div class="col-md-4 text-center mt-1">
            <button
              id="addBtn"
              name="addBtn"
              class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm w-75"
            >
              <i class="fa fa-plus" aria-hidden="true"></i>
              Add
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<div class="row mb-2">
  <div class="col-lg-12">
    <div class="card">
      <div class="card-body">
        <div class="d-sm-flex align-items-center justify-content-between mb-3">
          <h1 class="page-title">Batch Upload</h1>
        </div>
        <div class="row mb-2">
          <div class="col-md-6">
            <input
              type="file"
              name="excelfile"
              id="excelfile"
              class="form-control d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm w-50"
            />
          </div>
          <div class="col-md-4">
            <button
              id="uploadBtn"
              name="uploadBtn"
              class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm w-50"
            >
              <i class="fa fa-arrow-up" aria-hidden="true"></i>
              Upload
            </button>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
  <div class="card-header py-3">
    <div class="row mb-4">
      <div class="col-md-3">
        <h6 class="m-0 font-weight-bold table-title">Caling Item Table</h6>
      </div>
      <div class="col-md-6">
        <input
          id="search"
          name="search"
          type="text"
          class="form-control"
          placeholder="Search Item Description"
          aria-label="search"
          aria-describedby="basic-addon1"
        />
      </div>
    </div>
  </div>

  <div class="card-body">
    <div class="table-responsive">
      <table
        class="table table-bordered"
        id="cablingproducts-dataTable"
        width="100%"
        cellspacing="10"
      >
        <thead class="table-dark">
          <tr>
            <th class="col-1 text-start">Serial</th>
            <th class="col-3 text-center">Description</th>
            <th class="col-1 text-center">Status</th>
            <th class="col-3 text-center">Added By</th>
            <th class="col-2 text-center">Added Date</th>
            <th class="col-1 text-end">Action</th>
          </tr>
        </thead>

        <tbody class="table-light"></tbody>
      </table>
    </div>
  </div>
</div>
