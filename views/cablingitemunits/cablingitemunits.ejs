<!-- Modal -->
<div
  class="modal fade bd-example-modal-lg"
  id="cablingitemunitsModal"
  tabindex="-1"
  role="dialog"
  aria-labelledby="exampleModalLabel"
  aria-hidden="true"
  data-keyboard="false"
  data-backdrop="static"
>
  <div class="modal-dialog modal-lg" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Edit Cabling Item Units</h5>
      </div>
      <div class="modal-body">
        <div class="row mb-2">
          <div class="col-lg-12">
            <div class="card-body">
              <div class="row mb-2">
                <div class="col-md-12">
                  <label class="form-label" for="itemunitcodemodal"
                    >Unit Code</label
                  >
                  <input
                    id="itemunitcodemodal"
                    name="itemunitcodemodal"
                    type="text"
                    class="form-control"
                    placeholder="Enter new item code"
                    aria-label="fullname"
                    aria-describedby="basic-addon1"
                    disabled
                  />
                </div>
              </div>
              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="unitdescriptionmodal"
                    >Unit Description</label
                  >
                  <input
                    id="unitdescriptionmodal"
                    name="unitdescriptionmodal"
                    type="text"
                    class="form-control"
                    placeholder="Enter new item description"
                    aria-label="fullname"
                    aria-describedby="basic-addon1"
                  />
                </div>
              </div>

              <div class="row">
                <div class="col-md-12">
                  <label class="form-label" for="itemlistmodal"
                    >Item Code</label
                  >
                  <input
                    class="entry-input form-control mb-2"
                    list="itemnamelist"
                    id="itemlistmodal"
                    name="itemosmodal"
                  />

                  <datalist id="itemnamelist">
                    <option value=""></option>
                  </datalist>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="modal-footer">
        <button
          type="button"
          class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
          data-dismiss="modal"
        >
          <i class="fa fa-times" aria-hidden="true"></i> Close
        </button>
        <button
          type="button"
          id="saveBtn"
          class="d-none d-sm-inline-block btn btn-sm btn-outline-primary shadow-sm"
        >
          <i class="fa fa-check" aria-hidden="true"></i> Save
        </button>
      </div>
    </div>
  </div>
</div>

